
<%- include('partials/header.ejs') %>

    <div class="main_section">
        <div class="section__box" id="lista_proizvoda">
            <ul>
                <li><a href="#">Voce</a></li>
                <li><a href="#">Povrce</a></li>
                <li><a href="#">Meso</a></li>
                <li><a href="#">Riba</a></li>
