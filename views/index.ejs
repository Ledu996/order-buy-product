                <li><a href="#">Pekara</a></li>
            </ul>
        </div>
            <div class="section__box" id="proizvod_box">
                <% data.forEach((currentValue, index, array) => {%>
                    <div class="kategorija_box" id="Kategorija"><!--Ovde nastupa baza (id kategorije)-->
